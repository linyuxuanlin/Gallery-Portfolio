{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/config", "dest": "/server.js" },
    { "src": "/images", "dest": "/server.js" },
    { "src": "/exif/(.*)", "dest": "/server.js" },
    { "src": "/thumbnail/(.*)", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "cache": [
    {
      "src": "/images",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/thumbnail/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    }
  ]
}
