{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/config", "dest": "/server.js" },
    { "src": "/images", "dest": "/server.js" },
    { "src": "/exif/(.*)", "dest": "/server.js" },
    { "src": "/thumbnails/(.*)", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
